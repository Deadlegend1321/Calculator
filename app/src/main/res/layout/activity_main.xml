<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b7"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="7"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/b4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b8"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="8"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/b5"
        app:layout_constraintStart_toEndOf="@+id/b7" />

    <Button
        android:id="@+id/b9"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="9"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/b6"
        app:layout_constraintStart_toEndOf="@+id/b8" />

    <Button
        android:id="@+id/add"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="+"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/sub"
        app:layout_constraintStart_toEndOf="@+id/b9" />

    <Button
        android:id="@+id/b4"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="4"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/b1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b5"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="5"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/b2"
        app:layout_constraintStart_toEndOf="@+id/b4" />

    <Button
        android:id="@+id/b6"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="6"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/b3"
        app:layout_constraintStart_toEndOf="@+id/b5" />

    <Button
        android:id="@+id/sub"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="-"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/mul"
        app:layout_constraintStart_toEndOf="@+id/b6" />

    <Button
        android:id="@+id/b1"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="1"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/clr"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b2"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="2"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/b"
        app:layout_constraintStart_toEndOf="@+id/b1" />

    <Button
        android:id="@+id/b3"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="3"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/eql"
        app:layout_constraintStart_toEndOf="@+id/b2" />

    <Button
        android:id="@+id/mul"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="*"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/div"
        app:layout_constraintStart_toEndOf="@+id/b3" />

    <Button
        android:id="@+id/clr"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="32dp"
        android:text="C"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="32dp"
        android:text="0"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clr" />

    <Button
        android:id="@+id/eql"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="32dp"
        android:text="="
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/b" />

    <Button
        android:id="@+id/div"
        android:layout_width="91dp"
        android:layout_height="67dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="32dp"
        android:text="/"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eql" />

    <TextView
        android:id="@+id/t"
        android:layout_width="352dp"
        android:layout_height="72dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:gravity="right|end"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="207dp" />
</androidx.constraintlayout.widget.ConstraintLayout>